--#1
print("Please enter some words")
someWords = io.read()
print(string.upper(someWords))

--#2
print("Enter the first number")
num1 = tonumber(io.read())

while num1 == nil do
    print("That's not a number, try again!")
    num1 = tonumber(io.read())
end

print("Enter the second number")
num2 = tonumber(io.read())

while num2 == nil do
    print("That's not a number, try again!")
    num2 = tonumber(io.read())
end

total = num1 + num2

print("The total is " ..total)

--#3
continueVar = 'y'
total = 0
newNumber = 0

while continueVar == 'y' do
    print("Enter a number")
    newNumber = tonumber(io.read())

    while newNumber == nil do
        print("Not a number, try again")
        newNumber = tonumber(io.read())
    end

    total = total + newNumber
    print("Do you want to enter another number? y or n")
    continueVar = io.read()
end
print("The total is " .. total)

--4
continueVar = 'y'
math.randomseed(os.time())
math.random() math.random() math.random()

while continueVar == 'y' do
    print("Enter a max number ")
    maxNumber = tonumber(io.read())
    while maxNumber == nil do
        print("Not a number, try again")
        maxNumber = tonumber(io.read())
    end
    randNumber = math.random(0, maxNumber)
    print("Your random number is " .. randNumber)
    print("Press y to do that again")
    continueVar = io.read()
end

--5
math.randomseed(os.time())
math.random() math.random() math.random()

evenCounter = 0
oddCounter = 0

for i = 1, 10, 1 do
    isEven = false
    randNumber = math.rand(0, 100)
    if randNumber % 2 == 0 then
        isEven = true
    end
    if isEven == true then
    print("Number" .. i " is " .. randNumber .. ": Even")
    evenCounter = evenCounter + 1
    else
        print(print("Number" .. i " is " .. randNumber .. ": Odd"))
        oddCounter = oddCounter + 1
    end
end
print("There were " .. evenCounter .. "even numbers.")
print("There were " .. oddCounter .. "odd numbers.")